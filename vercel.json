{
  "rewrites": [
    { "source": "/blog", "destination": "/" },
    { "source": "/blog/:path*", "destination": "/" },
    { "source": "/sitemap.xml", "destination": "https://xjumsrjuyzvsixvfwoiz.supabase.co/functions/v1/sitemap" }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://vread.fr/blog/$1",
      "permanent": true,
      "has": [{ "type": "host", "value": "vread.blog" }]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; img-src * data: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.gpteng.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=3600, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
