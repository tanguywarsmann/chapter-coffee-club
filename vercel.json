
{
  "rewrites": [
    { "source": "/blog", "destination": "/" },
    { "source": "/blog/:path*", "destination": "/" },
    { "source": "/sitemap.xml", "destination": "/" }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://vread.fr/blog/$1",
      "permanent": true,
      "has": [{ "type": "host", "value": "vread.blog" }]
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=UTF-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        }
      ]
    }
  ]
}
